<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="385.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="account.NewAccController">
   <children>
      <Region prefHeight="42.0" prefWidth="385.0" />
      <Label prefHeight="32.0" prefWidth="244.0" text="Enter Account Number:">
         <font>
            <Font size="22.0" />
         </font>
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="acc_no" prefHeight="31.0" prefWidth="261.0" promptText="12 - digit account no.">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <Label text="Enter Password:">
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <PasswordField fx:id="pass" promptText="Password size is 6">
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </PasswordField>
      <Label text="Confirm Password:">
         <VBox.margin>
            <Insets left="20.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <PasswordField fx:id="confirm_pass" promptText="Re-enter your password">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="10.0" />
         </VBox.margin></PasswordField>
      <HBox alignment="CENTER" prefHeight="112.0" prefWidth="385.0">
         <children>
            <Button fx:id="submit" mnemonicParsing="false" text="Submit">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font size="16.0" />
               </font></Button>
         </children>
      </HBox>
   </children>
</VBox>
